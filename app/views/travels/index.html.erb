<h1>List of your Trips</h1>
<br>
<div class="travel-main-section d-flex m-5">
  <div class="travel-card mr-5 mb-5">
    <div class="travel-details">
      <% @travels.each do |travel| %>
        <h2><%= travel.name %></h2>
        <div class="travel-date d-flex m-5">
          <p><%= travel.start_date %></p>
          <p><%= travel.end_date %></p>
        </div>
        <p><%= travel.description %></p>
        <div class="price-location d-flex p-2">
          <p><%= travel.location %></p>
          <p><%= travel.price %> â‚¬</p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="team-card ml-5">
    <% @teams.each do |team| %>
      <h2><%= team.name %></h2>
      <p><%= team.capacity %></p>
    <% end %>
  </div>
</div>
